<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="Lisa.Dobble.DicePage"
                       x:Name="DiceView"
                       BackgroundColor="#BFBFBF">
    <Frame x:Name="MainGrid" BackgroundColor="#BFBFBF">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center"  BackgroundColor="#BFBFBF">
          <Image x:Name="DieView" HeightRequest="367" WidthRequest="367" Source="Dice/1/1.png" Aspect="Fill"/>
          <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="20,0,0,0">
            <Image x:Name="TimeOne" Source="tick.png"/>
            <Image x:Name="TimeTwo" Source="tick.png"/>
            <Image x:Name="TimeThree" Source="tick.png" />
          </StackLayout>
        </StackLayout>
    </Frame>
</ContentPage>