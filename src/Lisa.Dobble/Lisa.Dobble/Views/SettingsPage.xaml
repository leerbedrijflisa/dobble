<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Xamarin.Forms.Labs.Controls;assembly=Xamarin.Forms.Labs"
             xmlns:icons="clr-namespace:Xamarin.Forms.Labs.Helpers;assembly=Xamarin.Forms.Labs"
					   x:Class="Lisa.Dobble.SettingsPage">
    <Grid HorizontalOptions="FillAndExpand" Padding="0, 20, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>


      <controls:ImageButton x:Name="CreditsButton" Grid.Row="0"
HeightRequest="50" WidthRequest="50" VerticalOptions="Start" HorizontalOptions="End"
             Orientation="ImageToLeft" BackgroundColor="#fff"                
ImageHeightRequest="50" ImageWidthRequest="50" >
        <controls:ImageButton.Source>
          <OnPlatform x:TypeArguments="ImageSource">
            <OnPlatform.iOS>
              <FileImageSource File="info-48.png" />
            </OnPlatform.iOS>
            <OnPlatform.Android>
              <FileImageSource File="Drawable/info.png" />
            </OnPlatform.Android>
            <OnPlatform.WinPhone>
              <FileImageSource File="info-48.png" />
            </OnPlatform.WinPhone>
          </OnPlatform>
        </controls:ImageButton.Source>
      </controls:ImageButton>
      
      
      <Image Source="Drawable/logo.png" HeightRequest="100" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Start"/>
        <Grid Grid.Row="1" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="FillAndExpand" x:Name="SettingsGrid" BackgroundColor="#E0E0E0" Padding="0, 0, 0, 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   VerticalOptions="Center" HorizontalOptions="End" 
                   Grid.Column="0"
                   Text="Soort dobbelsteen"/>
          <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
            <Image x:Name="DieNameImage"  Grid.Row="0" Grid.Column="1" Aspect="Fill" VerticalOptions="Center" HorizontalOptions="Start" HeightRequest="35" WidthRequest="35"/>
            <Label Grid.Row="0"
                   VerticalOptions="Center" HorizontalOptions="Start"
                   Grid.Column="1"
                   x:Name="DieNameLabel"
                   Text="Geen dobbelsteen geselecteerd ..."/>
          </StackLayout>
          
            <Button Grid.Row="0"
                    x:Name="ChooseProfileButton"
                    VerticalOptions="Center" HorizontalOptions="Start" 
                   Grid.Column="2"
                   Text="Kies profiel"/>
            

            <Label Grid.Row="1"
                   VerticalOptions="Center" HorizontalOptions="End" 
                   Text="Wachttijd na dobbelen"/>
            <Entry Grid.Row="1"
                   x:Name="DobbleDelay"
                   VerticalOptions="Center" HorizontalOptions="FillAndExpand" 
                       Grid.Column="1"
                       Text="5"/>
            <Label Grid.Row="1"
                   VerticalOptions="Center" HorizontalOptions="Start" 
                   Grid.Column="2"
                   Text="Wachttijd in seconden"/>   
            
            <Label Grid.Row="3"
                   VerticalOptions="Center" HorizontalOptions="End" 
                   Text="Raakvlak"/>
            <Label Grid.Row="3"
                   Grid.Column="1"
          VerticalOptions="Center" HorizontalOptions="Start" 
                   Text="Geheel Scherm"/>
            <Label Grid.Row="3"
                   Grid.Column="1"
                   VerticalOptions="Center" HorizontalOptions="Start" 
                   Text="Dobbelsteen"/>
        </Grid>
        <Button x:Name="StartButton"
                Grid.Row="2"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Text="Beginnen met dobbelen"
                Font="30"/>
      
    </Grid>
</ContentPage>