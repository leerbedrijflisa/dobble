<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="Lisa.Dobble.DicePage"
                       x:Name="DiceView"
                       BackgroundColor="#BFBFBF">
    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="#BFBFBF"  x:Name="MainGrid">
        <Grid VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="Red">
            <Image x:Name="DiceImage" VerticalOptions="Center" HorizontalOptions="Center"  Source="Dice/dice.png" Aspect="Fill"/>
        </Grid>
    </Grid>
</ContentPage>